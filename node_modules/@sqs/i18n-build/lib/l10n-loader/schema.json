{
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "translations": {
            "type": "object",
            "description": "translations dictionary of strings for replacement",
            "additionalProperties": true
        },
        "autoImportPackagesConfig": {
            "type": "object",
            "description": "mapping of packages to auto import i18n configs",
            "additionalProperties": false,
            "patternProperties": {
                ".*": { "type": "string" }
            }
        },
        "autoImportOnly": {
            "type": "boolean",
            "description": "if set, will skip replacing translations"
        },
        "translationsBasePath": {
            "type": "string",
            "description": "base path to sqs-i18n-translations directory"
        }
    },
    "required": ["translations"]
}
