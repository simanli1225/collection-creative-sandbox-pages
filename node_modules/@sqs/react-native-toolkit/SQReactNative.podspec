require 'json'

package = JSON.parse(File.read(File.join(__dir__, "package.json")))

Pod::Spec.new do |s|
  s.name             = 'SQReactNative'
  s.version          = package['version']
  s.summary          = package['description']
  s.homepage         = package['homepage']
  s.license          = { :type => 'Proprietary', :text => 'Copyright 2023, Squarespace, Inc.' }
  s.authors          = { 'The Squarespace Mobile Team' => 'mobile-eng@squarespace.com' }
  s.source           = { :git => 'ssh://git@github.com/sqsp/react-native-toolkit.git', :tag => 'v' + s.version.to_s }

  s.swift_version = '5.5'
  s.ios.deployment_target = '13.0'

  s.source_files = 'ios/**/*.{h,m,mm,swift}'
  s.preserve_paths = 'package.json'

  s.dependency 'React-Core'
end
